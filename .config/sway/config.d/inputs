#################################################
##
#### Input configuration
##
#################################################
#~~~ keyboard
input "type:keyboard" {
	xkb_layout  us,tr
	xkb_numlock enabled
	#xkb_options "grp:toggle"
	xkb_options "grp:win_space_toggle"
	#xkb_file    ~/.config/sway/keyboard.xkb
}

#~~~ touchpad configuration (for Laptops)
input "type:touchpad" {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}
